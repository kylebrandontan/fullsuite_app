<div class="container">
  <h1>Products</h1>
  <button type="button" class="button"><%= link_to "Add Product", new_product_path %></button>
    <table class = "table">
      <thead>
        <tr>
          <th>Name</th>
          <th>SKU</th>
          <th>Price</th>
          <th>Cost of Goods</th>
          <th>Updated At</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
        <tr id = "product_<%= product.id %>">
          <td id = "product_<%= product.id %>_sku">
            <%= product.sku %>
          </td>
          <td>
            <%= product.name %>
          </td>
          <td>
            <%= product.price %>
          </td>
          <td>
            <%= product.cost_of_goods %>
          </td>
          <td id = "product--<%= product.id %>_updated_at">
            <%= product.updated_at.strftime('%m-%d-%Y') %>
          </td>
          <td>
            <%= link_to "Show", product_path(product) %>
            <%= link_to "Edit", edit_product_path(product) %>
            <%= link_to "Delete",
                    product_path(product),
                    class: 'delete',
                    method: :delete,
                    data: {
                      confirm: "Are you sure you want to delete this product?"
                    } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>
