<%= form_with model: product, local: true, id: "product-form" do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
    <%= render_error(product, :name) %>
  </div>
  <div class="form-group">
    <%= f.label :sku %>
    <%= f.text_field :sku, class: "form-control" %>
    <%= render_error(product, :sku) %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: "form-control" %>
    <%= render_error(product, :price) %>
  </div>
  <div class="form-group">
    <%= f.label :cost_of_goods %>
    <%= f.text_field :cost_of_goods, class: "form-control" %>
    <%= render_error(product, :cost_of_goods) %>
  </div>
  <%= f.submit "Save Product", class: "btn btn-primary", id: "submit-button" %>
<% end %>
